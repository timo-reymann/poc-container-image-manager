  test-{{ image.name }}:
    runs-on: ubuntu-latest
    container: registry.example.com/ci/image-manager:latest
    needs:
      - manifest-{{ image.name }}
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true
      - uses: actions/download-artifact@v4
        with:
          name: generated
          path: dist/
{%- if artifacts %}
      - uses: actions/download-artifact@v4
        with:
          name: {{ image.name }}-manifest
          path: dist/
{%- endif %}
      - run: image-manager test {{ image.name }} --snapshot-id "$SNAPSHOT_ID"{% if not artifacts %} --pull{% endif %}
