  test-{{ image.name }}:
    runs-on: ubuntu-latest
    container: {{ ci_image | default('registry.example.com/ci/image-manager:latest') }}
    services:
      dind:
        image: docker:dind
        options: --privileged
        env:
          DOCKER_TLS_CERTDIR: ""
    env:
      DOCKER_HOST: tcp://dind:2375
    needs:
      - manifest-{{ image.name }}
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true
      - uses: actions/download-artifact@v4
        with:
          name: generated
          path: dist/
{%- if artifacts %}
      - uses: actions/download-artifact@v4
        with:
          name: {{ image.name }}-manifest
          path: dist/
{%- endif %}
      - run: image-manager test {{ image.name }} --snapshot-id "$SNAPSHOT_ID"{% if not artifacts %} --pull{% endif %}
