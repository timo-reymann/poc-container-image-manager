  manifest-{{ image.name }}:
    runs-on: ubuntu-latest
    container: registry.example.com/ci/image-manager:latest
    needs:
{%- for platform in platforms %}
      - build-{{ image.name }}-{{ platform }}
{%- endfor %}
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true
      - uses: actions/download-artifact@v4
        with:
          name: generated
          path: dist/
{%- if artifacts %}
{%- for platform in platforms %}
      - uses: actions/download-artifact@v4
        with:
          name: {{ image.name }}-{{ platform }}
          path: dist/
{%- endfor %}
{%- endif %}
      - run: image-manager manifest {{ image.name }} --snapshot-id "$SNAPSHOT_ID"
{%- if artifacts %}
      - uses: actions/upload-artifact@v4
        with:
          name: {{ image.name }}-manifest
          path: |
            dist/{{ image.name }}/*/image.tar
            dist/{{ image.name }}/*/index.html
          retention-days: 7
{%- endif %}
